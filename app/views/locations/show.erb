<h2>Results for <%= @location.formatted_location %></h2>

<h4>Today</h4>
<p><%= DateTime.now.strftime('%A, %b %d, %Y') %></p>
<% @location.today_weather.each do |data| %>
  <p><%= data[0] %>: <%= data[1] %></p>
<% end %>

<h4>Current</h4>
<% @location.now_weather.each do |data| %>
  <p><%= data %></p>
<% end %>

<h4>Future</h4>
<% @location.future_weather.each do |data| %>
  <p><%= data[0] %>: <%= data[1] %></p>
<% end %>

<h4>Past</h4>
<% @location.past_weather.each do |data| %>
  <p><%= data %></p>
<% end %>
